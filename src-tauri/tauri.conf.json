{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PutoEditor Desktop",
  "version": "0.1.0",
  "identifier": "com.putoeditor.desktop",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "PutoEditor Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {},
  "allowlist": {
    "fs": {
      "all": true
    },
    "dialog": {
      "all": true
    }
  }
}
